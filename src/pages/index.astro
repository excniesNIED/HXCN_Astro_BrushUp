---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <div class="flex flex-wrap items-center gap-x-3 gap-y-2">
        <h1 class="my-4 text-4xl font-bold sm:my-8 sm:text-5xl">
          萑澈的错题本
        </h1>
        <a
          target="_blank"
          href={new URL("rss.xml", Astro.site).href}
          class="inline-flex items-center gap-2 opacity-85 hover:text-accent hover:opacity-100"
          aria-label="RSS Feed"
          title="RSS Feed"
          rel="noopener noreferrer"
        >
          <IconRss width={18} height={18} class="stroke-current stroke-2" />
          <span class="text-sm">RSS</span>
        </a>
      </div>

      <p class="max-w-prose leading-relaxed opacity-90">
        把每一次“翻车”变成可复用的知识点：题意拆解、易错点回放、正确解法与小结模板。
        这里的文章按分类沉淀，方便你在复盘时快速定位同类题目。
      </p>

      <div class="mt-6 grid gap-3 sm:grid-cols-3">
        <div class="rounded border border-border bg-muted/20 p-4">
          <p class="font-semibold">按分类整理</p>
          <p class="mt-1 text-sm opacity-80">竞赛 / 408 / 题库练习</p>
        </div>
        <div class="rounded border border-border bg-muted/20 p-4">
          <p class="font-semibold">错因优先</p>
          <p class="mt-1 text-sm opacity-80">把“为什么错”写清楚</p>
        </div>
        <div class="rounded border border-border bg-muted/20 p-4">
          <p class="font-semibold">可复用模板</p>
          <p class="mt-1 text-sm opacity-80">沉淀思路与代码片段</p>
        </div>
      </div>
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">精选文章</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">最新文章</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 flex flex-col justify-center gap-4 text-center sm:flex-row">
      <LinkButton href="/post/">按分类浏览</LinkButton>
      <LinkButton href="/posts/">
        全部文章
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
