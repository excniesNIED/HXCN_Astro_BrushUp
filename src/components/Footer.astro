---
import type { HTMLAttributes } from "astro/types";
import Socials from "./Socials.astro";
import LinkButton from "./LinkButton.astro";
import IconRss from "@/assets/icons/IconRss.svg";
import IconSitemap from "@/assets/icons/IconSitemap.svg";

const currentYear = new Date().getFullYear();
const rssHref = new URL("rss.xml", Astro.site).href;

type Props = {
  noMarginTop?: boolean;
} & HTMLAttributes<"footer">;

const { noMarginTop = false, class: className, ...attrs } = Astro.props;
---

<footer
  class:list={["app-layout", { "mt-auto": !noMarginTop }, className]}
  {...attrs}
>
  <div
    class:list={[
      "py-6 sm:py-4",
      "border-t border-border",
      "flex flex-col items-center justify-between sm:flex-row-reverse",
    ]}
  >
    <Socials />
    <div class="my-2 flex flex-col items-center gap-2 sm:items-start">
      <div class="flex flex-col items-center whitespace-nowrap sm:flex-row">
        <span>Copyright &#169; {currentYear}</span>
        <span class="hidden sm:inline"
          >&nbsp;<a href="https://hxcn.cnies.org">Churnie HXCN</a>&nbsp;</span
        >
        <span>All rights reserved.</span>
      </div>
      <div class="flex items-center gap-4 text-sm opacity-85">
        <LinkButton
          href={rssHref}
          title="RSS Feed"
          aria-label="RSS Feed"
          target="_blank"
          rel="noopener noreferrer"
        >
          <IconRss width={16} height={16} class="stroke-current stroke-2" />
          <span>RSS</span>
        </LinkButton>
        <LinkButton
          href={rssHref}
          title="Sitemap"
          aria-label="Sitemap"
          target="_blank"
          rel="noopener noreferrer"
        >
          <IconSitemap width={16} height={16} class="stroke-current stroke-2" />
          <span>Sitemap</span>
        </LinkButton>
      </div>
    </div>
  </div>
</footer>
